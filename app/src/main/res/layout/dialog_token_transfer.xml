<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="280dp"
    android:layout_height="300dp">
    
    <TextView
        android:id="@+id/dialog_token_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="36sp"
        android:text="ETH"
        android:textColor="@color/default_black"
        android:textStyle="bold" />
    
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dialog_token_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/default_margin"
        fresco:placeholderImage="@drawable/ether_big"/>

    <TextView
        android:id="@+id/dialog_token_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="0.10eth"
        android:layout_marginTop="10dp"
        android:textColor="@color/default_black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/dialog_button_token_transfer"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/button_corner_blue_shape"
            android:text="转账"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/dialog_button_token_receive"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/button_corner_blue_shape"
            android:layout_marginStart="40dp"
            android:text="接收"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>


    
</LinearLayout>