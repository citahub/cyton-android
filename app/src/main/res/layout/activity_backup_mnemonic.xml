<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.cryptape.cita_wallet.view.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:isShowBottomLine="true"
        app:isShowLeft="true"
        app:title="@string/backup_mnemonic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warning_background"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/warning"
        android:paddingEnd="@dimen/default_margin"
        android:paddingStart="@dimen/default_margin"
        android:paddingTop="@dimen/default_margin"
        android:text="@string/backup_mnemonic_warning1"
        android:textColor="@color/warning_font"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warning_background"
        android:drawablePadding="3dp"
        android:paddingEnd="@dimen/default_margin"
        android:paddingStart="35dp"
        android:text="@string/backup_mnemonic_warning2"
        android:textColor="@color/warning_font"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warning_background"
        android:drawablePadding="3dp"
        android:paddingEnd="@dimen/default_margin"
        android:paddingStart="35dp"
        android:text="@string/backup_mnemonic_warning3"
        android:textColor="@color/warning_font"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warning_background"
        android:drawablePadding="3dp"
        android:paddingBottom="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        android:paddingStart="35dp"
        android:text="@string/backup_mnemonic_warning4"
        android:textColor="@color/warning_font"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/mnemonic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/add_wallet_log_corner_shape"
        android:padding="@dimen/default_margin"
        android:textColor="@color/font_title"
        android:textSize="16sp" />

    <com.cryptape.cita_wallet.view.button.CommonButton
        android:id="@+id/backup_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:status="true"
        app:text="@string/next_action" />
</LinearLayout>