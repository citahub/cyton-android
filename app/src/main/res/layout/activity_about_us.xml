<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical">

    <org.nervos.neuron.custom.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:isShowLeft="true"
        app:title="@string/about_us_title"
        app:title_color="@color/font_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:src="@drawable/ic_about_us_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="@string/app_name"
            android:textColor="@color/font_title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/font_inside"
            android:textSize="14sp" />

    </LinearLayout>

    <org.nervos.neuron.custom.SettingButtonView
        android:id="@+id/sbv_source_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        app:icon="@drawable/ic_about_us_origin_code"
        app:name="源代码"
        app:other1="false" />

    <org.nervos.neuron.custom.SettingButtonView
        android:id="@+id/sbv_server_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_about_us_server_pri"
        app:name="服务及隐私条款"
        app:other1="false" />

    <org.nervos.neuron.custom.SettingButtonView
        android:id="@+id/sbv_nervos_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        app:icon="@drawable/ic_about_us_nervos_network"
        app:name="Nervos Network"
        app:other1="false" />

    <org.nervos.neuron.custom.SettingButtonView
        android:id="@+id/sbv_infura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_about_us_infua"
        app:name="Infura"
        app:other1="false" />

    <org.nervos.neuron.custom.SettingButtonView
        android:id="@+id/sbv_open_sea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_about_us_open_sea"
        app:name="Open Sea"
        app:other1="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="3dp"
            android:text="@string/neuron_is_a"
            android:textColor="@color/default_gray_9"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/neuron_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="3dp"
            android:text="@string/product"
            android:textColor="@color/default_gray_9"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>