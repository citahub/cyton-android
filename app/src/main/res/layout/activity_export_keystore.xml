<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <org.nervos.neuron.custom.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:isShowBottomLine="true"
        app:isShowLeft="true"
        app:title="导出Keystore" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warning_background"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/warning"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/default_margin"
        android:paddingStart="@dimen/default_margin"
        android:text="@string/export_keystore_warning"
        android:textColor="@color/warning_font"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/edit_input_shape"
        android:padding="5dp"
        android:textColor="@color/default_gray_6"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/export_copy"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@id/separate"
        android:background="@drawable/button_corner_blue_shape"
        android:gravity="center"
        android:text="复制"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>